<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<ImageView
        android:id="@+id/sahanaLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/header" />
	<TextView
        android:id="@+id/headingAddInventory2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sahanaLogo"
        android:layout_centerHorizontal="true"
        android:text="Add Item Continued:"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnsave"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:background="@drawable/btn"
        android:text="Save" />

    <EditText
        android:id="@+id/editTextLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewLength"
        android:layout_alignBottom="@+id/textViewLength"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:ems="10" />

    <EditText
        android:id="@+id/editTextComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnsave"
        android:layout_alignLeft="@+id/editTextVol"
        android:layout_marginBottom="37dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/editTextVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextComments"
        android:layout_alignLeft="@+id/editTextHeight"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <TextView
        android:id="@+id/textViewVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextVol"
        android:layout_alignBottom="@+id/editTextVol"
        android:layout_alignLeft="@+id/textViewHeight"
        android:text="Volume(m):"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/TextViewComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextComments"
        android:layout_alignLeft="@+id/textViewVol"
        android:text="Comments: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextVol"
        android:layout_alignLeft="@+id/textViewWidth"
        android:layout_marginBottom="23dp"
        android:text="Height(m):"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewHeight"
        android:layout_alignBottom="@+id/textViewHeight"
        android:layout_alignLeft="@+id/editTextWidth"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextWidth"
        android:layout_toLeftOf="@+id/headingAddInventory2"
        android:text="Width(m):"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextHeight"
        android:layout_alignLeft="@+id/editTextLength"
        android:layout_marginBottom="11dp"
        android:ems="10" >

    </EditText>

    <TextView
        android:id="@+id/textViewLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewWidth"
        android:layout_alignRight="@+id/TextViewComments"
        android:layout_below="@+id/headingAddInventory2"
        android:layout_marginTop="21dp"
        android:text="Length(m):"
        android:textSize="18sp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnsave"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn"
        android:text="Cancel" />

</RelativeLayout>