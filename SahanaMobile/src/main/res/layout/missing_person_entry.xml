<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    tools:context="com.example.guis.LoginMainActivity" >

    <Button
        android:id="@+id/btncancel"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnsave"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnsave"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn"
        android:text="Cancel" />

    <Button
        android:id="@+id/btnsave"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btncancel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/btn"
        android:text="Save"
        android:onClick="sendData" />

    <Spinner
        android:id="@+id/SpinnerGender"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/Gender"
        android:layout_alignLeft="@+id/SpinnerAge"
        android:layout_alignRight="@+id/SpinnerAge" />

    <ImageView
        android:id="@+id/sahanaLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/header" />

    <Spinner
        android:id="@+id/SpinnerAge"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/Age_group"
        android:layout_alignLeft="@+id/middleNameMP"
        android:layout_alignRight="@+id/lastNameMP" />

    <TextView
        android:id="@+id/missingPersonsModuleHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sahanaLogo"
        android:layout_centerHorizontal="true"
        android:text="Missing Person Registration"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/FirstNameHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:paddingRight="50dp"
        android:layout_below="@+id/missingPersonsModuleHeading"
        android:text="First Name"
        android:layout_marginTop="40dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/firstNameMP"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/FirstNameHeading"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:hint="First Name" >
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/FirstNameHeading"
        android:layout_alignRight="@+id/FirstNameHeading"
        android:layout_below="@+id/FirstNameHeading"
        android:layout_marginTop="20dp"
        android:text="Middle Name:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/middleNameMP"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/firstNameMP"
        android:ems="10"
        android:hint="Middle Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:text="Last Name:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/lastNameMP"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/middleNameMP"
        android:layout_alignBottom="@+id/textView3"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/Age_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="22dp"
        android:text="Age Group:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Age_group"
        android:layout_alignRight="@+id/Age_group"
        android:layout_below="@+id/Age_group"
        android:layout_marginTop="20dp"
        android:text="Gender:"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/missingPersonsAddPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SpinnerGender"
        android:layout_below="@+id/SpinnerGender"
        android:layout_marginTop="13dp"
        android:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Gender"
        android:layout_alignTop="@+id/missingPersonsAddPicture"
        android:layout_marginTop="10dp"
        android:text="Add picture"
        android:textSize="18sp" />

</RelativeLayout>